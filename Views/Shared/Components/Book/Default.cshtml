@model ltbdb.Models.BookModel
@using ltbdb.Core.Helpers
@using ltbdb.Core.Services
@inject ImageService ImageService

<li>
	<a href="@Url.RouteUrl("view", new { id = UrlHelper.ToSlug(Model.Id, 100, "Nr.", Model.Number.ToString(), Model.Title) })">
		<div>
			<img src="@ImageService.GetCDNPath(Model.Filename, ImageType.PreferThumbnail)" alt="" />
		</div>
		<span>Nr. @Model.Number - @Model.Title</span>
	</a>
</li>